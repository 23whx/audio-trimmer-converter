---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/tailwind.css';
import { SUPPORTED_LOCALES, type SupportedLocale, DEFAULT_LOCALE } from '../lib/i18n/language-manager';
import { translations } from '../lib/i18n/translations';

type Props = {
  locale?: SupportedLocale;
};

const { locale = DEFAULT_LOCALE } = Astro.props as Props;
const t = (key: keyof typeof translations[SupportedLocale]) =>
  translations[locale][key] || translations[DEFAULT_LOCALE][key] || key;
---

<BaseLayout
  title={`Terms of Service | ${t('appName')}`}
  description="Terms of Service"
  lang={locale}
>
  <article class="prose prose-sm max-w-3xl space-y-4 pt-28">
    <h1 class="text-3xl font-bold text-success-dark">Terms of Service</h1>
    <p class="text-sm text-neutral-dark/80">
      By using Audio Trimmer & Converter you agree to process media you own or are licensed to use.
      Features that rely on third-party services remain subject to their terms.
    </p>
    <h2 class="text-xl font-semibold text-success-dark">Usage</h2>
    <p class="text-sm text-neutral-dark/80">
      Do not upload unlawful content. Respect intellectual property and privacy laws in your
      jurisdiction.
    </p>
    <h2 class="text-xl font-semibold text-success-dark">Liability</h2>
    <p class="text-sm text-neutral-dark/80">
      The service is provided "as is" without warranties. We are not liable for damages resulting
      from misuse.
    </p>
  </article>
</BaseLayout>
